public class SubRotinaBoolean{
public static void main (System[]args){
    //verificar se o valor é positivo ou negativo
    int n1 = 0;
    System.out.println("O número é positovo?" + Verifica(n1));
}
    static int Verifica(int n){
        //par
        int n = 0;
        if (n / 2){
            return true;
        }else{
            return false;
        }
    }
}
